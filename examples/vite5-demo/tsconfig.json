{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "stripInternal": true,

    "types": ["node", "vue"]
  },
  "include": [
    "src/vue/*.ts",
    "src/vue/*.vue",
    "src/*.ts",
    "src/*.tsx",
    "vite-env.d.ts",
    "custom-modules.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}